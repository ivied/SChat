<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom" >

        <ImageView
            android:id="@+id/imageHelpLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textHelpVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_version"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textHelpLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_info_about_login"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textHelpPrefs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_help_prefs" 
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textHelpLinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_help_links"
        android:textSize="16sp" 
        />

</LinearLayout>