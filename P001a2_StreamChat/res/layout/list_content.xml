<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/progressContainer"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:visibility="gone"
                  android:gravity="center">

        <ProgressBar style="?android:attr/progressBarStyleLarge"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:text=""
                  android:paddingTop="4dip"
                  android:singleLine="true" />

    </LinearLayout>

    <FrameLayout android:id="@+id/listContainer"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/chatLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:orientation="vertical" >

            <ListView
                    android:id="@android:id/list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stackFromBottom="true"
                    android:transcriptMode="alwaysScroll"
                    android:layout_above="@+id/textOfMessage"
                android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                android:layout_marginBottom="70dp" />

            <EditText
                    android:id="@+id/textOfMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:ems="10"
                    android:background="@color/white"
                    android:layout_above="@+id/linearLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/linearLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp">

                <ImageButton
                        android:id="@+id/smiles"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"

                        android:background="@drawable/smile"
                        android:contentDescription="Smile"
                        android:onClick="addSmile"
                        android:textSize="12sp"
                        android:layout_weight="0.4"
                        />

                <ImageButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="New Button"
                        android:id="@+id/button"
                        android:layout_weight="0.05"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:drawable/ic_menu_manage"/>

                <ImageButton
                        android:id="@+id/enter"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:onClick="pressEnter"
                        android:text="Enter"
                        android:textSize="12sp"
                        android:background="@drawable/send"
                        android:layout_weight="0.4"
                        />
            </LinearLayout>

            <!--   <fragment
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:name="ivied.p001astreamchat.VideoView.FragmentWebView"
                       android:id="@+id/fragment"
                       android:layout_alignParentTop="true"
                       android:layout_alignParentLeft="true"
                       tools:layout="@layout/custom_screen"/>-->

        </RelativeLayout>
    </FrameLayout>

</FrameLayout>
