<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frameToFragments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </FrameLayout>

   
    <TextView
        android:id="@+id/textChoiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type prefer name for this channel (if need)" />

    <EditText
        android:id="@+id/personalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_type_personal_Name" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.66" >

            <RadioButton
                android:id="@+id/radioStandartColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Save standart color" />

            <RadioButton
                android:id="@+id/radioPersonalColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set personal color" />
        </RadioGroup>

        <TextView
            android:id="@+id/textColor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSetChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set channel" />

</LinearLayout>