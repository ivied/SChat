<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
 android:layout_height="match_parent"

 android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnFromApiSc2tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:text="Show present streams" />

        <Button
            android:id="@+id/btnShowMainPageSc2tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:text="@string/main_straems_sc2tv" />

        <Button
            android:id="@+id/btnByNameSc2tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:text="Add by Name" />

    </LinearLayout>

    <EditText
        android:id="@+id/editChannelNumberSc2tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_type_sc2tv_code"
        android:inputType="number" >

        <requestFocus />
    </EditText>

</LinearLayout>