<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ivied.p001astreamchat"
    android:versionCode="6"
    android:versionName="1.0b1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/Theme.Sherlock" 
    android:name="MyApp">
        <activity
            android:name="ivied.p001astreamchat.MainActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <service android:name="ChatService"></service>
        <provider android:name="MyContentProvider" android:authorities="ivied.p001astreamchat"></provider>
        <activity android:name="Login"></activity>
        <service android:name="SendMessageService"></service>
        <activity android:name="Preference"></activity>
        <activity android:name="AddChat"></activity>
        <activity android:name="AddChannel"></activity>
        <activity android:name="Help"></activity>
       
    </application>

</manifest>